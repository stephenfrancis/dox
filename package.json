{
  "name": "@stephen.francis/dox",
  "version": "0.2.1",
  "description": "Local Browse Functionality on a Git Repo containing Markdown",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:stephenfrancis/dox"
  },
  "author": "stephen.d.francis@gmail.com",
  "license": "Apache-2.0",
  "scripts": {
    "build": "NODE_ENV=production esbuild ./src/app/App.tsx --bundle --minify --sourcemap --platform=browser --define:global=window --outdir=./dist",
    "clean": "rm -f -r dist/*",
    "serve": "node ./src/Serve.js",
    "start": "cd src && NODE_ENV=development rollup --watch --config config/rollup.config.js",
    "test": "npx jest"
  },
  "bin": {
    "serve-dox": "./src/Serve.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "__tests__/.*\\.(ts|tsx)$",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "koa": "^2.13.4",
    "koa-send": "^5.0.1",
    "loglevel": "^1.8.0",
    "marked": "^4.0.12",
    "path-browserify": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "underscore": "^1.13.2",
    "viz.js": "^2.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "esbuild": "^0.15.7",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  }
}
