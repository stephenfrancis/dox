{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2015"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../node_modules/**/*.ts",
    "../node_modules/**/*.tsx"
  ]
}
